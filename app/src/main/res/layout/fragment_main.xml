<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:background="#F9F9F9"
    android:layout_height="wrap_content">
	
    <ScrollView
        android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@drawable/scroll"
        android:orientation="vertical">
        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ECECEC"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#222222" />

        <EditText
            android:id="@+id/EditText0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edittext"
            android:digits="1234567890ABCDEF."
            android:ems="10"
            android:textColor="#555555"
            android:inputType="numberDecimal"
            android:tag="10" >

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="15dp"
        android:background="#ECECEC"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text=" 2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#222222" />

        <EditText
            android:id="@+id/EditText1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/edittext"
            android:digits="1234567890ABCDEF."
            android:textColor="#555555"
            android:ems="10"
            android:inputType="numberDecimal"
            android:tag="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="15dp"
        android:background="#ECECEC"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text=" 8"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#222222" />

        <EditText
            android:id="@+id/EditText2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            
            android:digits="1234567890ABCDEF."
            android:textColor="#555555"
            android:ems="10"
            android:inputType="numberDecimal"
            android:tag="8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="15dp"
        android:background="#ECECEC"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="16"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#222222" />

        <EditText
            android:id="@+id/EditText3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/edittext"
            android:digits="1234567890ABCDEF."
            android:textColor="#555555"
            android:ems="10"
            android:inputType="numberDecimal"
            android:tag="16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="15dp"
        android:background="#ECECEC"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_more_hex"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="âˆ¨ 3"
            android:background="#ECECEC"
            android:textSize="12dp"
            android:textColor="#222222" />

        <EditText
            android:id="@+id/EditText4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:textColor="#555555"
            android:background="@drawable/edittext"
            android:digits="1234567890ABCDEF."
            android:ems="10"
            android:tag="3"
            android:inputType="numberDecimal"
             />
    </LinearLayout>

    <ImageView
        android:id="@+id/clear0"
        android:layout_width="25dp"
        android:layout_marginRight="2dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_alignTop="@+id/linearLayout1"
        android:contentDescription="@null"
        android:tag="0"
        android:src="@drawable/clear" />

    <ImageView
        android:id="@+id/clear1"
        android:layout_width="25dp"
        android:layout_marginRight="2dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignTop="@+id/linearLayout2"
        android:contentDescription="@null"
        android:src="@drawable/clear"
        android:tag="1" />

    <ImageView
        android:id="@+id/clear2"
        android:layout_width="25dp"
        android:layout_marginRight="2dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignTop="@+id/linearLayout3"
        android:contentDescription="@null"
        android:src="@drawable/clear"
        android:tag="2" />

    <ImageView
        android:id="@+id/clear3"
        android:layout_width="25dp"
        android:layout_marginRight="2dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linearLayout4"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignTop="@+id/linearLayout4"
        android:contentDescription="@null"
        android:src="@drawable/clear"
        android:tag="3" />

    <ImageView
        android:id="@+id/clear4"
        android:layout_width="25dp"
        android:layout_marginRight="2dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/LinearLayout01"
        android:layout_alignRight="@+id/LinearLayout01"
        android:layout_alignTop="@+id/LinearLayout01"
        android:contentDescription="@null"
        android:src="@drawable/clear"
        android:tag="4" />

</RelativeLayout>
    </ScrollView>
    
    
	

	<include
	    android:id="@+id/inputx"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    layout="@layout/input_window" />
	
	<TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#888888"
        android:gravity="right"
        android:text="@string/say" />
        
    </RelativeLayout>
 
