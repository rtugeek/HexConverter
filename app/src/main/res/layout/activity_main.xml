<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_dl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_bar"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@color/white">
                                                                                                                                                                                                                                                                    
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/CardLabel"
                android:text="D"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <com.freegeek.jzzh.view.RadixEditText
                style="@style/CardEditText"
                android:id="@+id/et_dec"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:digits="0123456789."
                android:text=""
                android:hint="@string/hint1"
                app:radix="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_above="@+id/keyboard"
        android:layout_below="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:dividerPadding="16dp"
            android:divider="@drawable/divider"
            android:showDividers="middle|beginning|end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                style="@style/CalculateCard"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="70dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/CardLabel"
                        android:text="B"
                        android:layout_width="66dp"
                        android:layout_margin="2dp"
                        android:layout_height="66dp" />

                    <com.freegeek.jzzh.view.RadixEditText
                        style="@style/CardEditText"
                        android:id="@+id/et_binary"
                        android:digits="01."
                        android:text=""
                        android:hint="2"
                        app:radix="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                style="@style/CalculateCard"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                app:contentPadding="0dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="70dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/CardLabel"
                        android:text="O"
                        android:layout_width="66dp"
                        android:layout_margin="2dp"
                        android:layout_height="66dp" />

                    <com.freegeek.jzzh.view.RadixEditText
                        style="@style/CardEditText"
                        android:digits="01234567."
                        android:text=""
                        android:hint="8"
                        android:id="@+id/et_octal"
                        app:radix="8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                style="@style/CalculateCard"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                app:contentPadding="0dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="70dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/CardLabel"
                        android:text="H"
                        android:layout_width="66dp"
                        android:layout_margin="2dp"
                        android:layout_height="66dp" />

                    <com.freegeek.jzzh.view.RadixEditText
                        style="@style/CardEditText"
                        android:digits="0123456789ABCDEF."
                        android:text=""
                        android:id="@+id/et_radix"
                        android:hint="16"
                        app:radix="16"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                style="@style/CalculateCard"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                app:contentPadding="0dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="70dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_label_misc"
                        style="@style/CardLabel"
                        android:text="3"
                        android:layout_width="66dp"
                        android:layout_margin="2dp"
                        android:layout_height="66dp" />

                    <com.freegeek.jzzh.view.RadixEditText
                        style="@style/CardEditText"
                        android:digits="0123456789ABCDEF."
                        android:text=""
                        app:radix="3"
                        android:id="@+id/et_misc"
                        android:hint="@string/more_radix"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

    <com.freegeek.jzzh.view.Keyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/keyboard"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
